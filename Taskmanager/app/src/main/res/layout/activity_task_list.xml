<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TaskListActivity">

    <TextView
        android:id="@+id/titleListTask"
        android:text="@string/title_list_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleListTask"
        android:layout_above="@+id/btnNewTask"
        android:divider="#FFECECEC"
        android:dividerHeight="2sp" />

    <Button
        android:id="@+id/btnNewTask"
        android:text="@string/btn_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="newTask" />

</RelativeLayout>
